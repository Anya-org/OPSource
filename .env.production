# Production Environment Configuration

# Network Settings
BITCOIN_NETWORK=mainnet
NODE_ENV=production
API_PORT=8080

# Debug Configuration
DEBUG=false
LOG_LEVEL=info

# Clarity Settings
CLARITY_VERSION=2
DAO_CONTRACT_PATH=anya-core/dao/contracts
VSCODE_SETTINGS_PATH=.vscode/settings.json

# Database Configuration
DB_HOST=production-db
DB_PORT=5432
DB_NAME=opsource_prod
DB_USER=opsource
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true
DB_POOL_SIZE=10

# Security Settings
RATE_LIMIT=100
RATE_WINDOW=15m
ENABLE_SECURITY_HEADERS=true

# Cache Configuration
REDIS_URL=redis://redis:6379

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
TELEMETRY_ENABLED=true
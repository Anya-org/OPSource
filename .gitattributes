# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Rust files
*.rs text diff=rust

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Configuration files
*.yml text
*.yaml text
*.json text
*.toml text
*.ini text
*.cfg text

# Git files
.gitignore text
.gitattributes text
.gitmodules text

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.zip binary
*.gz binary
*.tar binary
*.7z binary
*.pdf binary

{
  "name": "opsource",
  "version": "1.0.0",
  "description": "Research and development platform for the Anya Core Bitcoin implementation.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "check": "npx @hirosystems/clarinet-sdk check 'src/core/dao/**/*.clar'",
    "docs": "typedoc --out docs src/",
    "lint": "eslint src/ tests/",
    "build": "tsc",
    "dev": "tsc --watch"
  },
  "devDependencies": {
    "@hirosystems/clarinet-sdk": "^0.2.2",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "eslint": "9.20.1",
    "happy-dom": "^17.1.4",
    "tinyrainbow": "^2.0.0",
    "typedoc": "0.27.7",
    "typescript": "^5.0.0",
    "vitest": "^3.0.6"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/botshelomokoka/OPSource.git"
  },

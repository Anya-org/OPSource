# Root level submodules - AI Core Components
[submodule "anya-core/dash33"]
    path = anya-core/dash33
    url = https://github.com/botshelomokoka/dash33.git
    branch = main
    update = merge
    fetchRecurseSubmodules = true

[submodule "anya-core/enterprise"]
    path = anya-core/enterprise
    url = https://github.com/botshelomokoka/anya-enterprise.git
    branch = main
    update = merge
    fetchRecurseSubmodules = true

[submodule "anya-core/mobile"]
    path = anya-core/mobile
    url = https://github.com/botshelomokoka/anya-mobile.git
    branch = main
    update = merge
    fetchRecurseSubmodules = true


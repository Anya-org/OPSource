{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "src/core/*"
            ],
            "@shared/*": [
                "src/core/shared/*"
            ],
            "@tests/*": [
                "tests/*"
            ]
        },
        "types": [
            "vitest/globals",
            "node",
            "@hirosystems/clarinet-sdk"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "anya-core/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@core/*": [
                "src/core/*"
            ],
            "@shared/*": [
                "src/core/shared/*"
            ],
            "@tests/*": [
                "tests/*"
            ],
            "@hirosystems/clarinet-sdk": ["./types/clarinet-sdk"]
        },
        "types": [
            "vitest/globals",
            "node",
            "@hirosystems/clarinet-sdk"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "anya-core/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
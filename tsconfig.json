{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022", "DOM"],
        "module": "NodeNext",
        "types": ["node", "jest", "vitest"],
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "anya-core/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
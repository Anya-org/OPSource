{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "jest",
            "node"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "anya-core/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}